<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="116dp"
	android:layout_marginLeft="5dp"
	android:layout_marginRight="5dp" android:background="@drawable/contentrow" android:layout_marginTop="10dp" android:layout_marginBottom="10dp">


	<ImageView android:layout_width="100dp" android:layout_height="100dp"
		android:layout_alignParentBottom="true" android:layout_marginLeft="10dp"
		android:background="@drawable/khunganh" android:paddingBottom="10dp"
		android:paddingLeft="11dp" android:paddingRight="11dp"
		android:paddingTop="10dp" android:id="@+id/item_img"/>

	<TextView android:layout_width="wrap_content" android:layout_height="fill_parent"
		android:layout_marginRight="20dp"
		android:lines="2" android:text="ABC" android:textColor="#999999" android:layout_toRightOf="@+id/title" android:id="@+id/title" android:layout_marginLeft="90dp" android:layout_marginBottom="30dp" android:gravity="center_vertical" android:layout_marginTop="10dp"/>

	<TextView android:layout_width="wrap_content" android:text="View" android:textColor="#9d87bb" android:layout_alignParentBottom="true" android:layout_marginLeft="110dp" android:layout_toRightOf="@+id/view" android:id="@+id/view" android:layout_height="25dp"/>

	<TextView android:layout_width="wrap_content" android:layout_alignParentBottom="true"
		android:layout_alignParentRight="true" android:layout_marginRight="10dp" android:textColor="#9d87bb" android:text="Số lượng 5" android:id="@+id/number" android:layout_height="25dp"/>

</RelativeLayout>