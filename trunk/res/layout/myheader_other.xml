<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="wrap_content"
	android:orientation="vertical" android:id="@+id/header_other">

	<RelativeLayout android:layout_width="match_parent"
		android:layout_height="wrap_content" android:background="@drawable/title_new"
		android:orientation="vertical">

		<LinearLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_alignParentRight="true"
			android:layout_centerInParent="true">

			<Button android:id="@+id/bt_Search" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_marginLeft="33dp"
				android:layout_marginRight="5dp" android:background="@drawable/search_new" />

			<Button android:id="@+id/bt_Menu" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_marginRight="5dp"
				android:background="@drawable/menu_new" />
		</LinearLayout>
	</RelativeLayout>

	<LinearLayout android:id="@+id/layout_search"
		android:background="@drawable/top_mid" android:gravity="center_vertical|center_horizontal"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:visibility="gone">

		<EditText android:id="@+id/txt_search" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_marginRight="10dp"
			android:background="@drawable/box_content" android:singleLine="true" android:paddingLeft="10dp">
		</EditText>

		<Button android:id="@+id/bt_Search_Main" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:background="@drawable/search_icon">
		</Button>
	</LinearLayout>
	<LinearLayout android:layout_height="wrap_content"
		android:layout_width="match_parent" android:background="@drawable/background"
		android:id="@+id/layout_galary_other" android:visibility="visible">
		<com.hdc.mshow.customize.CustomGalary
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_marginTop="10dp" android:id="@+id/galary_other">
		</com.hdc.mshow.customize.CustomGalary>
	</LinearLayout>
	<LinearLayout android:layout_height="wrap_content"
		android:background="@drawable/anh_khac" android:gravity="center_vertical|center_horizontal"
		android:layout_width="fill_parent" android:id="@+id/layout_album_other" android:visibility="visible"></LinearLayout>
</LinearLayout>

