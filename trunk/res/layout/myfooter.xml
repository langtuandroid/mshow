<?xml version="1.0" encoding="utf-8"?>
<!-- <merge xmlns:android="http://schemas.android.com/apk/res/android"> -->

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent" android:layout_height="match_parent"
		android:orientation="vertical">

		<ImageView android:id="@+id/footer_advertise"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_marginTop="20dp" android:background="@drawable/top_mid"
			android:gravity="center" />

		<RelativeLayout android:id="@+id/footer_layoutbottom"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:background="@drawable/bottom">

			<TextView android:id="@+id/footer_t1" android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerHorizontal="true" android:layout_marginTop="5dp"
				android:text="Xem miễn phí kích hoạt dịch vụ"
				android:textColor="#9d87bb" />

			<TextView android:id="@+id/footer_t2" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_below="@+id/footer_t1"
				android:layout_centerHorizontal="true" android:layout_marginTop="5dp"
				android:text="Phí dịch vụ 15.000 đ" android:textColor="#9d87bb" />

			<TextView android:id="@+id/footer_t3" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_below="@+id/footer_t2"
				android:layout_centerHorizontal="true" android:layout_marginTop="5dp"
				android:text="cliphot" android:textColor="#9d87bb" />
		</RelativeLayout>
	</LinearLayout>

