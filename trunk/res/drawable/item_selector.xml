    <item android:drawable="@color/blue" android:state_focused="true" android:state_pressed="false" android:state_selected="true"/>
    
    
    <!-- Normal -->
    <item android:drawable="@drawable/contentrow" android:state_focused="false" android:state_pressed="false" android:state_selected="false"/>

